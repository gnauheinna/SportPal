<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/groupchat.css">
</head>
<body>
    <div id="userContainer">
        <input type="text" id="Username" placeholder="Enter your name" required />
        <button type="button" id="BtnUser">Login</button>
        <div id="displayName"></div>
    </div>



    <div class="registerevent">
        <div class="event-section">
            <div id="registeredEvent" class="registeredEvent"></div>
        </div>

        <div class="vertical-line"></div>
       
        <div class="chat-section">
            <div class="chat-backgroud">
                <div class="info-section">
                    <div id="info-name"></div>
                    <div id="info-detail">
                        <div id="currentPlayer"></div>
                        <div id="sport"></div>
                        <div id="fee"></div>
                    </div>
                </div>
                <div class="horizontal-line"></div>
                <div id="chatHistory" class="chatHistory"><div class="notice">Please Select An Event</div></div>
                <div id="send-message">
                    <input type="text" id="message-input"/>
                    <button id="btnSend">Send</button>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://js.pusher.com/7.0/pusher.min.js"></script>

<script src="~/js/Chat/utility.js" asp-append-version="true"></script>

<script src="~/js/Chat/messageHandling.js" asp-append-version="true"></script>
<script src="~/js/Chat/groupHandling.js" asp-append-version="true"></script>




</html>